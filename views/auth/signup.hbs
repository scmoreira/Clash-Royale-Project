<div class="row justify-content-center background electrico">
    <div class="col-md-6 divLogin ">

        <h1>Signup</h1>

        <form action="/signup" method="POST">
            <div class="form-group">
                <label for="field1">User Name</label>
                <input name="username" type="text" class="form-control" id="field1">
            </div>
            <div class="form-group">
                <label for="field2">Password</label>
                <input name="password" type="password" class="form-control" id="field2">
                <small class="form-text text-muted">Never share your password!</small>
            </div>

            <button type="submit" class="btn btn-dark btn-block btn-lg">Signup</button>

            {{#if errorMsg}}
            <div id="errorMsg">{{{errorMsg}}}</div>
            {{/if}}
        </form>

        <p>Do you have an account?<a href="/login"> Login!</a></p>
    </div>
</div>