<div class="row justify-content-center background mago">
    <div class="col-md-6 divLogin">

        <h1>Login</h1>

        <form action="/login" method="POST">
            <div class="form-group">
                <label for="field1">User Name</label>
                <input name="username" type="text" class="form-control" id="field1">
            </div>
            <div class="form-group">
                <label for="field2">Password</label>
                <input name="password" type="password" class="form-control" id="field2">
            </div>

            <button type="submit" class="btn btn-dark btn-block btn-lg">Login</button>

            {{#if errorMsg}}
            <div id="errorMsg">{{{errorMsg}}}</div>
            {{/if}}

        </form>

        <p>Not register yet? <a href="/signup"> Signup!</a></p>
    </div>
</div>