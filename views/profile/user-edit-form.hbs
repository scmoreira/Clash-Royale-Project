<div class="row justify-content-center background esqueleto">
    <div class="col-md-6 divLogin">
        <h1>Update your profile</h1>
        <form action="/profile/edit/{{id}}" method="POST"> 
            <div class="form-group">
                <label for="field1">User Name</label>
                <input name="username" type="text" class="form-control" id="field1" value="{{username}}">
            </div>
            <div class="form-group">
                <label for="field2">Password</label>
                <input name="password" type="password" class="form-control" id="field2" value="{{password}}">
            </div>
            <button type="submit" class="btn btn-dark btn-block btn-lg">Update</button>
            {{#if errorMsg}}
            <div id="errorMsg">{{{errorMsg}}}</div>
            {{/if}}
        </form>
    </div>
</div>