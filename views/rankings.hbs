<div class="container countryForm" style="margin-top: 25px;">
    <form action="/ranking" method="post">
        <label>Enter your location : </label>
        <input type="text" name="location" placeholder="Your Country">
        <input type="submit" value="Search" class="btn btn-dark">
    </form>
</div>

{{#if errorMsg}}
<div id="errorMsg">{{{errorMsg}}}</div>
{{/if}}
<hr>

<div class="container" style="margin-top: 25px;">
    <div class="row">
        <div class="col-6">
            <h3 style="display: flex; justify-content:center">Ranking Player</h3>
            <hr>
            {{#each rankingPlayers}}
            <div class="row icon ranking">

                <div class="col-5">
                    <strong>{{rank}}</strong> - <strong>{{name}}</strong>
                </div>

                <div class="col-4">
                    <img src="/images/trophy (1).png" alt="trophies"><strong> Trophies: </strong>{{trophies}}
                </div>

                <div class="col-3">
                    <img src="/images/exp.png"><strong> Exp Level: </strong>{{expLevel}}
                </div>

            </div>

            <div class="row icon ranking" style="margin-top: 30px">

                <div class="col-5">
                    <strong> Clan: </strong>{{clan.name}}
                </div>

                <div class="col-4">
                    <strong> Arena: </strong>{{arena.name}}
                </div>

            </div>
            <hr>
            {{/each}}
        </div>

        <div class="col-6">
            <h3 style="display: flex; justify-content:center">Ranking Clans</h3>
            <hr>

            {{#each rankingClan}}
            <div class="row icon ranking">
                <div class="col-5">
                    <strong>{{rank}}</strong> - <strong>{{name}}</strong>
                </div>

                <div class="col-4">
                    <img src="/images/trophy (1).png" alt="score"><strong> Clan Score: </strong>{{clanScore}}
                </div>

                <div class="col-3">
                    <img
                        src="https://cdn.royaleapi.com/static/img/ui/social.png?t=3402cda4605fdc1189720f967030b63f742900f3"><strong>
                        Members:
                    </strong>{{members}}
                </div>
                
            </div>
            <hr>
            {{/each}}
        </div>
    </div>
</div>

